{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Запуск программы",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe", // Путь к файлу
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}", // Рабочая директория
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "d:/mingw/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Включить печать форматированных данных для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Task",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
